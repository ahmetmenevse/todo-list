<%= simple_form_for(@task) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :duration %>
  <%= f.input :priority, collection: ['Low', 'Medium', 'High'], input_html: { class: 'selectpicker' }, prompt: "Choose From List" %>
  <%= f.input :date, label: "Due Date" %>
<%= f.input :status, collection: ['ToDo', 'In Progress', 'Done'], input_html: { class: 'selectpicker' }, prompt: "Choose From List" %>


  <%= f.button :submit %>
<% end %>


