<%= simple_form_for(@task, html: { class: 'form' }) do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'Task Name', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :description, label: 'Description', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :duration, label: 'Duration (in hours)', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :priority, collection: ['Low', 'Medium', 'High'], label: 'Priority', input_html: { class: 'selectpicker form-control' }, prompt: 'Choose From List' %>
  </div>

  <div class="form-group">
    <%= f.input :date, label: 'Due Date', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :status, collection: ['ToDo', 'In Progress', 'Done'], label: 'Status', input_html: { class: 'selectpicker form-control' }, prompt: 'Choose From List' %>
  </div>

  <div class="form-group">
    <div class="button-group">
      <%= link_to "Back", tasks_path, :class => "btn btn-flat btn-back" %>
      <%= f.button :submit, class: 'btn btn-primary btn-create-task' %>
    </div>
  </div>
<% end %>
