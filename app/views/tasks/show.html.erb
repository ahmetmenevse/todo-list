<%= @task.name %>
<%= @task.description %>
<%= @task.duration.ceil %>
<%= @task.date %>
<%= @task.start_time %>
<% if @task.completed? %>
  completed
<% else %>
  not completed
<% end %>

<%= link_to 'Edit', edit_task_path(@task) %> 

<%= link_to 'Back', tasks_path %>

<%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
